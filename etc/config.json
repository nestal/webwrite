{
	"name"		: "WebWrite",		// name of the site
	"socket"	: ":9000",			// socket to be listened to
	"wb_root"	: "/webwrite",
	"lib"		: { "path": "lib",  "redir": "/wb/lib" },
	"data"		: { "path": "data", "redir": "/wb/data" },
	"mime"		:
	{
		".js"	: "application/javascript",
		".pdf"	: "application/pdf",
		".css"	: "text/css",
		".html"	: "text/html",
		".jpg"	: "image/jpeg",
		".jpeg"	: "image/jpeg",
		".svg"	: "image/svg+xml",
		".png"	: "image/png",
	},
	"log"		:
	{
		"level"	: "debug",
		"file"	: "webwrite.log"
	},
	
	"cache"		:
	{
		"lib"	: 3600,			// library files caches longer
		"data"	: 300,			// data files caches shorter
		"index"	: 600,			// people don't create pages often, do they?
	},
}
